@model PayrollSystem.Models.SalaryClass

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Salary Slip </title>
    <style type="text/css">
        table.tableizer-table {
            font-size: 12px;
            border: 1px solid #CCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        .tableizer-table td {
            padding: 4px;
            margin: 3px;
            border: 1px solid #CCC;
        }

        .tableizer-table th {
            background-color: cyan;
            color: #000000;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <table class="tableizer-table">
        <thead>
            <tr class="tableizer-firstrow">
                <th>CYNEXIS SOLUTIONS PVT. LTD.</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Salary slip for the Month of : @Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().MonthName -@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().Year.ToString()</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>Name               : @Model.GetEmployeeByEmailAddress.FirstOrDefault().Name</td>
                <td>PF CODE: @Model.GetEmployeeByEmailAddress.FirstOrDefault().EmployeePFCode</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>Empl. Code      : @Model.GetEmployeeByEmailAddress.FirstOrDefault().EmployeeCode</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>Paid days        : @Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().paid_days</td>
                <td>Present Days : @Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().present_days    W / off : @Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().w_off</td>
                <td>&nbsp;</td>
                <td>Leave : @Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().leave       Absent :@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().absent</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td colspan="2" style="background-color:yellow;">Actual (Rs.)</td>
                <td colspan="2" style="background-color:yellow;">Earnings (Rs.)</td>
                <td colspan="2" style="background-color:yellow;">Deductions (Rs.)</td>
            </tr>
            <tr>
                <td>Basic </td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().actual_basic</td>
                <td>Basic </td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().earning_basic</td>
                <td>P.F</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().deduction_pf</td>
            </tr>
            <tr>
                <td>House Rent Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().actual_hra</td>
                <td>House Rent Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().earning_hra</td>
                <td>P.T</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().deduction_pt</td>
            </tr>
            <tr>
                <td>Conveyance Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().actual_ca</td>
                <td>Conveyance Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().earning_ca</td>
                <td>TDS</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().deduction_tds</td>
            </tr>
            <tr>
                <td>Medical Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().actual_ma</td>
                <td>Medical Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().earning_ma</td>
                <td>&nbsp;</td>
                <td></td>
            </tr>
            <tr>
                <td>Internet Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().actual_ia</td>
                <td>Internet Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().earning_ia</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>Special Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().actual_sa</td>
                <td>Special Allowance</td>
                <td>@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().earning_sa</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td style="background-color:yellow;">GROSS  (Rs.) </td>
                <td style="background-color:yellow;">@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().Gross</td>
                <td style="background-color:yellow;">Total Gross (Rs.) </td>
                <td style="background-color:yellow;">@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().Gross_Total</td>
                <td style="background-color:yellow;">Total Deduct.(Rs.)</td>
                <td style="background-color:yellow;">@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().Deduction_Total</td>
            </tr>
            <tr>
                <td>Net Salary Rs.</td>
                <td style="background-color: cyan;">@Model.GetSalaryOfEmployeeByEmployeeIdMonthYear.FirstOrDefault().Net_Total</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td></td>
            </tr>
        </tbody>
    </table>
</body>
</html>
